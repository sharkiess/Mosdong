@model Mosdong.Models.ViewModels.NavListViewModel

@if (Model != null)
{
    @foreach (var item in Model.NavCategory)
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="dropdown_@Html.DisplayFor(m => item.Id)" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                @{switch (item.Id)
                    {
                        case 1: <i class="fas fa-store col-1"></i>
                        break;

                        case 2: <i class="fas fa-utensils col-1"></i>
                        break;

                        case 3: <i class="fas fa-store-alt col-1"></i>
                        break;

                        case 4: <i class="fas fa-bread-slice col-1"></i>
                        break;

                    }
                }


                @Html.DisplayFor(m => item.Name)

            </a>
            <div class="dropdown-menu" id="nav@Html.DisplayFor(m => item.CategoryId)" aria-labelledby="dropdown_@Html.DisplayFor(m => item.Id)">

                @foreach (var sub in Model.NavSubCategory.Where(s => s.CategoryId == item.Id))
                {
                    <div class="dropdown dropright">
                        @if (Model.NavMiniCategory.Where(n => n.SubCategoryId == sub.Id && n.Id != 0).Count() > 0)
                        {

                            <a class="dropdown-item dropdown-toggle" href="#" id="dropdown-layouts" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@Html.DisplayFor(s => sub.Name)</a>
                            <div class="dropdown-menu" aria-labelledby="dropdown-layouts">
                                @foreach (var mini in Model.NavMiniCategory.Where(n => n.SubCategoryId == sub.Id))
                                {
                                    <a class="dropdown-item" asp-area="Customer" asp-controller="Home" asp-action="Category3">@mini.Name</a>
                                }
                            </div>

                        }

                        else
                        {
                            <a class="dropdown-item" asp-route-id="@sub.Id" asp-area="Customer" asp-controller="Home" asp-action="Category2">@Html.DisplayFor(s => sub.Name)</a>
                        }

                    </div>
                }

            </div>
        </li>
    }
}
else
{
    <p>TopNav List Null</p>
}