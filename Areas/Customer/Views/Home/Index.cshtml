@model Mosdong.Models.ViewModels.IndexViewModel

<div class="alert alert-info" role="alert">
    <text style="font-size:20px"><span class="badge badge-pill badge-info">공지사항</span></text> 한국상점 쇼핑몰 오픈기념 쿠폰이 있습니다. 쿠폰사용은 8월 31일까지 유효합니다.
</div>

@if (Model.Coupon.ToList().Count > 0)
{
    <div class="border">
        <div id="carouselCoupon" class="carousel" data-ride="carousel">
            @for (int i = 0; i < Model.Coupon.Count(); i++)
            {
                if (i == 0)
                {
                    <div class="carousel-item active" data-interval="4000">
                        @{
                            var base64 = Convert.ToBase64String(Model.Coupon.ToList()[i].Picture);
                            var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                        }

                        <img src="@imgsrc" height="50" class="d-block w-100" />
                    </div>
                }
                else
                {
                    <div class="carousel-item" data-interval="4000">
                        @{
                            var base64 = Convert.ToBase64String(Model.Coupon.ToList()[i].Picture);
                            var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                        }

                        <img src="@imgsrc" height="50" class="d-block w-100" />

                    </div>
                }
            }

        </div>
    </div>
}

<br />
<br />



<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active" data-interval="4000">
            <img class="d-block w-100" src="~/images/carousel_images/carousel_vegi.jpg" alt="First slide">
        </div>
        <div class="carousel-item" data-interval="4000">
            <img class="d-block w-100" src="~/images/carousel_images/carousel_summer.jpg" alt="Second slide">
        </div>
    </div>
    <!-- Controls -->
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>



<div class="container col-12">
            <div class="row" id="NewItems">
                <partial name="_IndexNewItemsPartial" model="@Model.ProductItem.Where(p => p.ProductAd == "1" && p.IsNotVisible == false)" />
            </div>
</div>

<div class="container col-12">
    <div class="row" id="NewItems">
        <partial name="_IndexHitItemsPartial" model="@Model.ProductItem.Where(p => p.ProductAd == "2" && p.IsNotVisible == false)" />
    </div>
</div>

<div class="container col-12">
    <div class="row" id="NewItems">
        <partial name="_IndexTryItemsPartial" model="@Model.ProductItem.Where(p => p.ProductAd == "3" && p.IsNotVisible == false)" />
    </div>
</div>