@page
@using Mosdong.Utility 
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<form method="post" asp-route-returnUrl="@Model.ReturnUrl">
    <div class="border backgroundWhite">
        <div class="row">
            <div class="col-md-6 col-sm-12">
                @if (User.IsInRole(SD.ManagerUser))
                {
                    <h2 class="text-info">
                        직원계정 만들기
                    </h2>
                }
                else
                {
                    <h2 class="text-info">
                        회원가입하기
                    </h2>
                }

                <br />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Input.Name" class="col-form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="Input.Name" class="form-control text-left">
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Input.KakaoName" class="col-form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="Input.KakaoName" class="form-control text-left">
                        <span asp-validation-for="Input.KakaoName" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Input.Email" class="col-form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="Input.Email" class="form-control text-left">
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Input.PhoneNumber" class="col-form-label"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="Input.PhoneNumber" class="form-control text-left">
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label class="col-form-label">거주지역*</label>
                    </div>
                    <div class="col-9">
                        <select asp-for="Input.Area" class="form-control" id="Area">
                            <option value=" ">---선택하세요---</option>
                            <option value="1">알루에빠루사</option>
                            <option value="2">베르고바야</option>
                            <option value="3">트라이엄프</option>
                            <option value="Others">기타지역</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row" id="alppa" style="display:none">
                    <div class="offset-3 col-9">
                        <input hidden asp-for="Input.StreeAddress" value="알루에빠루사" />
                        <select asp-for="Input.DomNumber" class="form-control">
                            <option value=" ">---선택하세요---</option>
                            <option value="1">1동 | 79A</option>
                            <option value="2">2동 | 79Б</option>
                            <option value="3">3동 | 79В</option>
                            <option value="4">4동 | 79к1</option>
                            <option value="5">5동 | 77</option>
                            <option value="6">6동 | 77к1</option>
                            <option value="7">7동 | 77к2</option>
                        </select>
                    </div>
                </div>
                <div id="directinput" style="display:none">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Input.StreeAddress" class="col-form-label"></label>
                        </div>
                        <div class="col-9">
                            <input asp-for="Input.StreeAddress" class="form-control text-left">

                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="Input.DomNumber" class="col-form-label"></label>
                        </div>
                        <div class="col-9">
                            <input asp-for="Input.DomNumber" class="form-control text-left">
                            <span asp-validation-for="Input.DomNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="offset-3 col-9 inline row">
                        <div class="col-4">
                            <label asp-for="Input.EntranceNumber" class="col-form-label"></label>
                            <input asp-for="Input.EntranceNumber" class="form-control w-100">
                        </div>

                        <div class="col-4">
                            <label asp-for="Input.FloorNumber" class="col-form-label"></label>
                            <input asp-for="Input.FloorNumber" class="form-control w-100 text-left">
                        </div>

                        <div class="col-4">
                            <label asp-for="Input.AptNumber" class="col-form-label"></label>
                            <input asp-for="Input.AptNumber" class="form-control w-100 text-left">
                        </div>
                        <span asp-validation-for="Input.FloorNumber" class="text-danger"></span>
                        <span asp-validation-for="Input.AptNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Input.City" class="col-form-label"></label>
                    </div>
                    <div class="col-9">
                        <select asp-for="Input.City" class="form-control text-left">
                            <option value="모스크바" selected>모스크바</option>
                            <option value="뻬쩨르">뻬쩨르</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Input.Password"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="Input.Password" class="form-control" />
                        <div class="text-muted form-inline small">
                            영문 대,소문자, 숫자, 특수문자가 각 1자리 이상 포함
                        </div>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Input.ConfirmPassword"></label>
                    </div>
                    <div class="col-9">
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                @if (User.IsInRole(SD.ManagerUser))
                {
                    <div class="form-group row">
                        <div class="col-3">

                        </div>
                        <div class="col-9">
                            <input type="radio" name="rdUserRole" value="@SD.FrontDeskUser" checked />매장직원
                            &nbsp;
                            <input type="radio" name="rdUserRole" value="@SD.PartnerUser" />파트너
                            &nbsp;
                            <input type="radio" name="rdUserRole" value="@SD.ManagerUser" />매니저(모든 권한)
                        </div>
                    </div>
                }

                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <button type="submit" class="btn btn-primary form-control">회원가입</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script type="text/javascript">
        $('#Area').on('change', function () {
            $("#alppa").hide();
            $("#directinput").hide();
             var changeVal = $("#Area").val();
            if (changeVal == "1") {
                $("#alppa").show();
            }
            if (changeVal == "Others") {
                $("#directinput").show();
            }
        });
    </script>
}
