@model Coupon
@{
    ViewData["Title"] = "쿠폰 추가";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" enctype="multipart/form-data">
    <div class="border backgroundWhite">
        <div class="row">
            <div class="col-8">
                <h2 class="text-info">쿠폰 추가</h2><br />
            </div>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control text-left">
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Picture" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input type="file" id="projectImage" name="files" multiple class="form-control-file" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Discount" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Discount" class="form-control text-left">
            </div>
            <span asp-validation-for="Discount" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CouponType" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MinimumAmount" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="MinimumAmount" class="form-control text-left">
            </div>
            <span asp-validation-for="MinimumAmount" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsActive" class="col-form-label"></label>
            </div>
            <div class="col-6">
                <input type="checkbox" asp-for="IsActive" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-6 offset-2">
                <div class="row">
                    <partial name="_CreateAndBackToListButton" />
                </div>
            </div>
        </div>
    </div>

</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


