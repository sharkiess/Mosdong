@model IEnumerable<Coupon>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="border backgroundWhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">쿠폰 목록</h2>
        </div>
        <div class="col-6 text-right">
            <partial name="_CreateButton" />
        </div>
    </div>
    <br />
    <div>
        @if (Model.Count() > 0)
        {

            <table class="table table-hover">
                <tr class="table-dark">
                    <th scope="col">
                        @Html.DisplayNameFor(m => m.Name)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(m => m.Discount)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(m => m.MinimumAmount)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(m => m.IsActive)
                    </th>
                    <th scope="col"></th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Discount) &nbsp;

                            @{
                                if(item.CouponType == "0")
                                {
                                    <text>퍼센트</text>
                                }
                                else
                                {
                                     <text>루블</text>
                                }
                            }

                        </td>
                        <td>
                            @Html.DisplayFor(m => item.MinimumAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.IsActive)
                        </td>
                        <partial name="_EditAndDeleteButton" model="item.Id" />
                    </tr>
                }
            </table>
        }
        else
        {
            <p>리스트가 존재하지 않습니다. 상단의 버튼을 누르고 추가하세요.</p>
        }
    </div>
</div>


